<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_margin="1dp">

    <TextView
        android:id="@+id/item_run_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Title"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Delete"
        />

    <TextView
        android:id="@+id/item_run_distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/distance_txt"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_run_title" />

    <TextView
        android:id="@+id/item_run_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="10000"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/item_run_distance_text"
        app:layout_constraintTop_toBottomOf="@id/item_run_title" />

    <TextView
        android:id="@+id/item_run_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Duration: "
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_run_distance_text" />

    <TextView
        android:id="@+id/item_run_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="00:00:00"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/item_run_duration_text"
        app:layout_constraintTop_toBottomOf="@id/item_run_distance_text" />

    <TextView
        android:id="@+id/item_run_pace_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Pace:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_run_duration_text" />

    <TextView
        android:id="@+id/item_run_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="0.00"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/item_run_pace_text"
        app:layout_constraintTop_toBottomOf="@id/item_run_duration_text" />

</androidx.constraintlayout.widget.ConstraintLayout>